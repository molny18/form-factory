{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formentity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formEntity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ formEntity.name }}</td>
            </tr>
            <tr>
                <th>Fields</th>
                <td>{{ formEntity.fields }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('base_form_index') }}">Back to the list</a>
